<!--Elevated card-->
<com.google.android.material.card.MaterialCardView style="?attr/materialCardViewElevatedStyle"
    layout_width="match_parent"
    layout_height="wrap_content"
    cardElevation="20dp"
    layout_margin="18dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:context=".VagasFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="165dp"
            android:src="@drawable/icon_card"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/anuncianteVaga"
                android:textSize="20sp"
                android:textColor="@color/secondary_blue"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                />
            <TextView
                android:id="@+id/resumo"
                android:textSize="14sp"
                android:text="@string/resumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/txt_color_1"
                />


            <TextView
                android:id="@+id/area_conhecimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/area"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/txt_color_1"
                />

            <TextView
                android:id="@+id/remuneracao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remuneracao"
                android:textSize="14sp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/txt_color_1"
                />


            <TextView
                android:id="@+id/localidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/localidade"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/txt_color_1"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/verInfos"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_width="300px"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/primary_blue"
                        android:text="@string/visualizar"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_deletar_card"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_width="300px"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/white"
                        android:text="@string/deletarCard"
                        android:textColor="@color/primary_red"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/primary_red"/>

                </LinearLayout>




        </LinearLayout>




    </LinearLayout>

</com.google.android.material.card.MaterialCardView>